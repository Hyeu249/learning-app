<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_learning_test_form" model="ir.ui.view">
        <field name="name">learning.test.form</field>
        <field name="model">learning.test</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="progress" widget="custom_progressbar" style="width: 100%"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <div style="font-size: 21px">Choose the answer that matches whatâ€™s in the audio</div>
                    <group>
                      <group>
                          <field name="audio_url" string="" widget="audio_player"/>
                      </group>
                      <group>
                          <button name="continue_record" type="object" string="Continue" class="sidebar-button"/>
                      </group>
                    </group>

                    <field name="answer_number_1" string="" widget="button"/>
                    <field name="answer_number_2" string="" widget="button"/>
                    <field name="answer_number_3" string="" widget="button"/>
                    <field name="answer_number_4" string="" widget="button"/>

                    <field name="translate_version" invisible="1"/>
                    <notebook groups="learning_app.group_learning_app_admin">
                        <page string="Info" name="info">
                            <group>
                                <field name="name"/>
                                <field name="description"/>
                                <field name="language"/>
                                <field name="translate_version"/>
                                <field name="audio_url"/>
                                <field name="progress"/>
                                <field name="is_right"/>
                                <field name="random_correct_answer"/>
                            </group>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <record id="view_learning_test_tree" model="ir.ui.view">
        <field name="name">learning.test.tree</field>
        <field name="model">learning.test</field>
        <field name="arch" type="xml">
            <tree>
                <header>
                    <button name="refresh_is_right"
                            string="Refresh is right"
                            type="object"
                            class="oe_highlight"/>

                </header>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="view_learning_test_search" model="ir.ui.view">
        <field name="name">learning.test.search</field>
        <field name="model">learning.test</field>
        <field name="arch" type="xml">
            <search>
                <field name="ref"/>
                <field name="name"/>
                <field name="description"/>
            </search>
        </field>
    </record>

    <record id="action_learning_test" model="ir.actions.act_window">
        <field name="name">Learning test</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">learning.test</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_learning_test"
            name="Learning test" 
            parent="menu_operations"
            action="action_learning_test"
            sequence="10"/>

</odoo>
